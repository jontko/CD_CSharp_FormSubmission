@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Enter your information </h1>
    @model User
    <form asp-action="Add" method="POST">
        <span asp-validation-for="First"></span>
        <p>First Name</p>
        <input asp-for="First"><br>
        <span asp-validation-for="Last"></span>
        <p>Last Name</p>
        <input asp-for="Last"><br>
        <span asp-validation-for="Age"></span>
        <p>Age</p>
        <input asp-for="Age"><br>
        <span asp-validation-for="Email"></span>
        <p>Email</p>
        <input asp-for="Email"><br>
        <span asp-validation-for="Password"></span>
        <p>Password</p>
        <input asp-for="Password"><br>
        <input value="Add User" type="submit">
    </form>
</div>
